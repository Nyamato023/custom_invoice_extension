<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Inherit the invoice report template -->
	<template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
		<!-- Insert a table before the existing invoice details -->
		<xpath expr="//table[@class='table table-sm o_invoice_print']" position="before">
			<table class="table table-sm o_invoice_print">
				<thead>
					<tr>
						<th>
							Previous
						</th>
						<th>
							New
						</th>
						<th>
							Actual
						</th>
						<th>
							Unit Price
						</th>
						<th>
							Total Price
						</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<!-- Display meter reading details dynamically -->
						<td t-esc="o.previous_reading" />
						<td t-esc="o.new_reading" />
						<td t-esc="o.actual_usage" />
						<td t-esc="o.unit_price" />
						<td t-esc="o.total_price" />
					</tr>
				</tbody>
			</table>
		</xpath>
	</template>
</odoo>
